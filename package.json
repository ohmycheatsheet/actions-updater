{
  "name": "@omcs/actions-updater",
  "version": "1.1.1",
  "description": "update repo from another repo",
  "keywords": [
    "GitHub",
    "Actions",
    "TypeScript"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ohmycheatsheet/actions-updater#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohmycheatsheet/actions-updater",
    "directory": "packages/actions-template"
  },
  "bugs": {
    "url": "https://github.com/ohmycheatsheet/actions-updater/issues",
    "email": "jiangweixian1994@gmail.com"
  },
  "author": "JW <jiangweixian1994@gmail.com> (https://twitter.com/jiangweixian)",
  "main": "dist/index.js",
  "scripts": {
    "lint:fix": "eslint . --fix",
    "build": "pnpm run prepare",
    "prepare": "ncc build ./src/index.ts -o dist --source-map --license licenses.txt && husky install",
    "test": "jest --setupFiles dotenv/config",
    "all": "pnpm run lint && pnpm run prepare && pnpm run test",
    "ci:version": "pnpx changeset version"
  },
  "lint-staged": {
    "**/**/*.{js,ts,vue,json}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.5.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@aiou/eslint-ignore": "^0.1.2",
    "diff": "^5.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "globby": "11.x",
    "lodash.difference": "^4.5.0",
    "lodash.intersection": "^4.4.0"
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.2.3",
    "@changesets/cli": "^2.17.0",
    "@jest/types": "^27.1.1",
    "@types/diff": "^5.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.1",
    "@types/lodash.difference": "^4.5.6",
    "@types/lodash.intersection": "^4.4.6",
    "@vercel/ncc": "^0.31.0",
    "cz-emoji": "^1.3.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.0",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
